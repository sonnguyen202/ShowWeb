@model Ecommerce.Service.ViewModels.Admin.ProductImageModel.EditProductImageModel
@{
    ViewData["Title"] = "EditProductImage";
    Layout = null;
}


<form asp-action="Edit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off" spellcheck="false" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.EditProductImageViewModel.ProductId"/>
    <input type="hidden" asp-for="@Model.EditProductImageViewModel.Id"/>
    <input type="hidden" asp-for="@Model.EditProductImageViewModel.ImageLink"/>
    <div class="form-group text-center">
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="@Model.EditProductImageViewModel.ImageLink" class="control-label"></label>
                    </div>
                    <div class="col-md-6 mr-auto">
                        <img src="~/images/@Model.EditProductImageViewModel.ImageLink" style="height:100px;object-fit:contain;width:100%;" />
                    </div>
                </div>
                
            </div>
            <div class="col-md-4 mr-auto">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="@Model.EditProductImageViewModel.ProductColorId" class="control-label"></label>
                    </div>
                    <div class="col-md-6 mr-auto">
                        <select asp-for="@Model.EditProductImageViewModel.ProductColorId">
                            <option value="@null" selected>Không có</option>
                            @foreach (var item in Model.ProductColors)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="@Model.EditProductImageViewModel.IsMainImage" class="control-label"></label>
                    </div>
                    <div class="col-md-2 mr-auto">
                        <input type="checkbox" asp-for="@Model.EditProductImageViewModel.IsMainImage" style="height:24px; width:100%"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </div>
</form>




