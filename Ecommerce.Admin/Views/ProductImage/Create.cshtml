@model Ecommerce.Service.ViewModels.Admin.ProductImageModel.AddProductImageModel
@{
    ViewData["Title"] = "CreateProductImage";
    Layout = null;
}


<form asp-action="Create" onsubmit="return jQueryAjaxPost(this);" autocomplete="off" spellcheck="false" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.AddProductImageViewModel.ProductId" value="@ViewBag.ProductId" />
    <div class="form-group text-center">
        <div class="row">
            <div class="col-md-6 mr-auto">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="@Model.AddProductImageViewModel.ProductColorId" class="control-label"></label>
                    </div>
                    <div class="col-md-6 mr-auto">
                        <select asp-for="@Model.AddProductImageViewModel.ProductColorId">
                            <option value="@null" selected>Không có</option>
                            @foreach (var item in Model.ProductColors)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group text-center">
        <div class="row">
            <div class="col-md-12 ">
                <div class="row">
                    <div class="col-md-2 ">
                        <div class="button-container">
                            <a class="button">Chọn ảnh</a>
                            <input type="file" accept="image/" id="ImageFiles" asp-for="@Model.AddProductImageViewModel.ImageFiles" multiple>
                        </div>
                    </div>
                    <div class="col-md-8 mr-auto">

                    </div>
                </div>
                <div class="picture-input">

                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </div>
</form>




