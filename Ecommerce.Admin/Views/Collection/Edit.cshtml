@model Ecommerce.Service.ViewModels.Admin.CollectionModel.EditCollectionViewModel
@{
    ViewData["Title"] = "CreateCollectionImage";
    Layout = null;
}


    <form asp-action="Edit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.Id" />


        <div class="form-group">
            <label class="control-label" asp-for="@Model.Name"></label>
            <div class="input-group">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <i class="fas fa-address-card"></i>
                    </div>
                </div>
                <input asp-for="@Model.Name" class="form-control" placeholder="Nhập họ tên">
            </div>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="@Model.Description"></label>
            <div class="input-group">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <input asp-for="@Model.Description" class="form-control" placeholder="Nhập mô tả">
            </div>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-2"><label asp-for="@Model.ImageFile" class="control-label"></label></div>
                <div class="col-md-2">
                    <input asp-for="@Model.ImageFile" accept="image/" onchange="loadFile(event)" style="margin-bottom:10px" />
                    <img id="output" width="120px" />
                </div>
                <div class="col-md-8"></div>
            </div>

            <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </div>
    </form>

