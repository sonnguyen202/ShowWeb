@model Ecommerce.Service.ViewModels.Admin.ProductModel.AddProductModel
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Tạo mới sản phẩm</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item">Sản phẩm</li>
                        <li class="breadcrumb-item active">Tạo mới sản phẩm</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <ul class="nav nav-tabs" style="margin-bottom:30px">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#general">Thông tin chung</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#attr">Thuộc tính </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#img">Ảnh sản phẩm</a>
                </li>
            </ul>
            <div class="attribute" style="display:none">
                <a class="btn-close"><i class="fas fa-times"></i></a>
                <div class="row " style="margin-bottom:20px">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Màu sắc</label>
                            </div>
                            <div class="col-md-6 mr-auto">
                                <select id="ColorId">
                                    <option value="@null" selected>Không có</option>
                                    @foreach (var item in Model.ProductColors)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mr-auto">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="Price">Kích thước</label>
                            </div>
                            <div class="col-md-6 mr-auto">
                                <select id="SizeId">
                                    <option value="@null" selected>Không có</option>
                                    @foreach (var item in Model.ProductSizes)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="row">
                            <div class="col-md-4">
                                <label class="control-label" for="Price">Giá Gốc</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" id="Price" class="form-control" data-type="currency" spellcheck="false" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-5">
                                <label for="Price">Giá Bán</label>
                            </div>
                            <div class="col-md-7">
                                <input type="text" id="DiscountPrice" class="form-control" data-type="currency" spellcheck="false"  />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mr-auto">
                        <div class="row">
                            <div class="col-md-6">
                                <label for="CountStock">Số lượng</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" id="CountStock" class="form-control" data-type="quantity" spellcheck="false" />
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <div class="image-product" style="display:none">
                <a class="btn-close"><i class="fas fa-times"></i></a>
                <div class="row " style="margin-bottom:20px">
                    <div class="col-md-3 ">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="Price">Màu sắc</label>
                            </div>
                            <div class="col-md-6 mr-auto">
                                <select id="ColorId">
                                    <option value="@null" selected>Không có</option>
                                    @foreach (var item in Model.ProductColors)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9 ">
                        <div class="row">
                            <div class="col-md-2 ">
                                <div class="button-container">
                                    <a class="button">Chọn ảnh</a>
                                    <input type="file" accept="image/" id="ImageFiles" multiple>
                                </div>
                            </div>
                            <div class="col-md-8 mr-auto">

                            </div>
                        </div>
                        <div class="picture-input">

                        </div>
                    </div>
                </div>
            </div>
            <form asp-action="Create" asp-controller="Product" method="post" autocomplete="off" spellcheck="false" enctype="multipart/form-data">
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane container active" id="general">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="control-label" asp-for="@Model.AddProductViewModel.Name"></label>
                                        </div>
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <input asp-for="@Model.AddProductViewModel.Name" class="form-control" placeholder="Nhập tên sản phẩm">

                                            </div>
                                            <span asp-validation-for="@Model.AddProductViewModel.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1"><label asp-for="@Model.AddProductViewModel.CategoryId" class="control-label"></label></div>
                                <div class="col-md-2 mr-auto">
                                    <select asp-for="@Model.AddProductViewModel.CategoryId" id="CategoryId" style="width:150px">
                                        @foreach (var item in Model.Categories)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-4"><label asp-for="@Model.AddProductViewModel.ManufacturerId" class="control-label"></label></div>
                                        <div class="col-md-8 ">
                                            <select asp-for="@Model.AddProductViewModel.ManufacturerId" id="ManufacturerId" style="width:150px">
                                                @foreach (var item in Model.Manufacturers)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="row">
                                        <div class="col-md-4"><label asp-for="@Model.AddProductViewModel.SupplierId" class="control-label"></label></div>
                                        <div class="col-md-8 ">
                                            <select asp-for="@Model.AddProductViewModel.SupplierId" id="SupplierId" style="width:150px">
                                                @foreach (var item in Model.Suppliers)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1"><label asp-for="@Model.AddProductViewModel.CollectionId" class="control-label"></label></div>
                                <div class="col-md-2 ">
                                    <select asp-for="@Model.AddProductViewModel.CollectionId" id="CollectionId" style="width:150px">
                                        <option value="@Guid.Empty" selected>Không có</option>
                                        @foreach (var item in Model.Collections)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label class="control-label" asp-for="@Model.AddProductViewModel.ShortDescription"></label>
                                        </div>
                                        <div class="col-md-10">
                                            <div class="input-group">
                                                <textarea asp-for="@Model.AddProductViewModel.ShortDescription" class="form-control" placeholder="Nhập mô tả ngắn" style="height:120px"></textarea>
                                            </div>
                                            <span asp-validation-for="@Model.AddProductViewModel.ShortDescription" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="form-group" style="display:flex">
                            <div class="row">
                                <div class="col-md-1"><label class="control-label" asp-for="@Model.AddProductViewModel.Description"></label></div>
                                <div class="col-md-11">
                                    <div class="input-group">
                                        <textarea asp-for="@Model.AddProductViewModel.Description" class="form-control" id="txtContext"></textarea>
                                    </div>
                                    <span asp-validation-for="@Model.AddProductViewModel.Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        @*<div class="form-group">
                                <label class="control-label" asp-for="@Model.AddProductViewModel.PublicationDate"></label>
                                <div class="input-group">
                                    <input type="datetime" id="PublicationDate" asp-for="@Model.AddProductViewModel.PublicationDate" class="form-control" data-toggle="datepicker">
                                </div>
                                <span asp-validation-for="@Model.AddProductViewModel.PublicationDate" class="text-danger"></span>
                            </div>*@

                    </div>
                    <div class="tab-pane container fade" id="attr">
                        <div class="attr-filter">
                            <div class="row text-center">
                                <div class="col-md-3 create-attribute">
                                    <a class="btn btn-success text-white" id="add-attr"><i class="fas fa-plus"></i>Thêm thuộc tính</a>
                                </div>
                                <div class="col-md-6 mr-auto mix-attribute">
                                    <div class="row " style="margin-bottom:10px">
                                        <div class="col-md-12">
                                            <h3>Bảng tạo thuộc tính</h3>
                                            
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom:10px">
                                        <div class="col-md-2"><label>Màu Sắc</label></div>
                                        <div class="col-md-10">
                                            <ul>

                                                @foreach (var item in Model.ProductColors)
                                                {
                                                    <li>
                                                        <input type="checkbox" name="color-filter" value="@item.Id" id="@item.Id" />
                                                        <label for="@item.Id">@item.Name</label>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom:20px">
                                        <div class="col-md-2"><label>Kích cỡ</label></div>
                                        <div class="col-md-10">
                                            <ul>
                                                @foreach (var item in Model.ProductSizes)
                                                {
                                                    <li>
                                                        <input type="checkbox" name="size-filter" value="@item.Id" id="@item.Id" />
                                                        <label for="@item.Id">@item.Name</label>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="row " style="margin-bottom:20px">
                                        <div class="col-md-2"><label>Giá Gốc</label></div>
                                        <div class="col-md-8 mr-auto">
                                            <input type="text" name="price-filter" class="form-control" spellcheck="false" data-type="currency" />
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom:20px">
                                        <div class="col-md-2"><label>Giá Bán</label></div>
                                        <div class="col-md-8 mr-auto">
                                            <input type="text" name="discount-filter" class="form-control" spellcheck="false" data-type="currency" />
                                        </div>
                                    </div>
                                    <div class="row" style="margin-bottom:25px">
                                        <div class="col-md-2"><label>Số lượng</label></div>
                                        <div class="col-md-8 mr-auto">
                                            <input type="text" name="stock-filter" class="form-control" spellcheck="false" data-type="quantity" />
                                        </div>
                                    </div>
                                    <div class="row text-center" style="margin-bottom:15px">
                                        <div class="col-md-6">
                                            <a class="btn btn-dark text-white" id="create-attr"><i class="fas fa-mortar-pestle"></i></i>Tạo thuộc tính</a>
                                        </div>
                                        <div class="col-md-6">
                                            <a class="btn btn-danger text-white" id="remove-attr"><i class="fa fa-trash"></i>Xóa tất cả</a>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>


                    </div>
                    <div class="tab-pane container fade" id="img">
                        <div class="row" style="margin-bottom:20px">
                            <div class="col-md-3 mr-auto">
                                <a class="btn btn-success text-white" id="add-img"><i class="fas fa-plus"></i>Thêm ảnh</a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu lại</button>
                </div>

            </form>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>





