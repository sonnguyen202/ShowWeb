@model List<EcommerceCommon.Infrastructure.ViewModel.Admin.ProductAttributeAdminViewModel>
@{
    var stt = 1;
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thuộc tính sản phẩm</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
                        <li class="breadcrumb-item active">Thuộc tính sản phẩm</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card ">
                        <div class="card-header">
                            <a onclick="showInPopup('@Url.Action("Create","ProductAttribute",new { ProductId = ViewBag.ProductId},Context.Request.Scheme)','Tạo mới thuộc tính')" class="btn btn-success text-white"><i class="fas fa-pencil-alt"></i>Thêm mới</a>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="data-table" class="table table-bordered table-striped text-center">
                                <thead>
                                    <tr>
                                        <th style="width:30px !important">STT</th>
                                        <th style="width:150px !important">Tên sản phẩm</th>
                                        <th style="width:80px !important">Màu sắc</th>
                                        <th style="width:80px !important">Kích cỡ</th>
                                        <th style="width:80px !important">Giá</th>
                                        <th style="width:80px !important">Giá khuyến mãi</th>
                                        <th style="width:60px !important">Số lượng</th>
                                        <th style="width:80px !important">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@stt</td>
                                            <td>@item.ProductName</td>
                                            <td> @item.ColorName</td>
                                            <td>@item.SizeName</td>
                                            <td>@(item.Price)đ</td>
                                            <td>@(item.DiscountPrice)đ</td>
                                            <td>@item.CountStock</td>
                                            <td>
                                                <a onclick="showInPopup('@Url.Action("Edit","ProductAttribute",new { id =item.Id},Context.Request.Scheme)','Cập nhật thuộc tính')" title="Cập nhật thuộc tính" class="btn btn-primary text-white "><i class="fas fa-random"></i></a>
                                                <form asp-action="Delete" asp-route-id="@item.Id" asp-route-ProductId="@ViewBag.ProductId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                                    <button type="submit" title="Xóa thuộc tính" class="btn btn-danger">
                                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>