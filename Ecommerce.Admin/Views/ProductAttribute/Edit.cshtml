@model Ecommerce.Service.ViewModels.Admin.ProductAttributeModel.EditProductAttributeModel
@{
    ViewData["Title"] = "EditProductAttribute";
    Layout = null;
}


    <form asp-action="Edit" onsubmit="return jQueryAjaxPost(this);" autocomplete="off" spellcheck="false" enctype="multipart/form-data">
        <input type="hidden" asp-for="@Model.EditProductAttributeViewModel.Id" />
        <input type="hidden" asp-for="@Model.EditProductAttributeViewModel.ProductId" />
        <div class="form-group text-center">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="@Model.EditProductAttributeViewModel.ProductColorId" class="control-label"></label>
                        </div>
                        <div class="col-md-6 mr-auto">
                            <select asp-for="@Model.EditProductAttributeViewModel.ProductColorId">
                                <option value="@null" selected>Không có</option>
                                @foreach (var item in Model.ProductColors)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="@Model.EditProductAttributeViewModel.ProductSizeId" class="control-label"></label>
                        </div>

                        <div class="col-md-6 mr-auto">
                            <select asp-for="@Model.EditProductAttributeViewModel.ProductSizeId">
                                <option value="@null" selected>Không có</option>
                                @foreach (var item in Model.ProductSizes)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="form-group text-center">
            <div class="row">
                <div class="col-md-3">
                    <label class="control-label" asp-for="@Model.EditProductAttributeViewModel.Price"></label>
                </div>
                <div class="col-md-6 mr-auto">
                    <div class="input-group">
                        <input asp-for="@Model.EditProductAttributeViewModel.Price" type="text" class="form-control" data-type="currency" placeholder="1.000.000đ"
                               oninput='this.value=this.value.replace(/\D/g, "").replace(/\B(?=(\d{3})+(?!\d))/g, ".")'>

                    </div>
                    <span asp-validation-for="@Model.EditProductAttributeViewModel.Price" class="text-danger"></span>
                </div>
            </div>
            
        </div>
        <div class="form-group text-center">
            <div class="row">
                <div class="col-md-3">
                    <label class="control-label" asp-for="@Model.EditProductAttributeViewModel.DiscountPrice"></label>
                </div>
                <div class="col-md-6 mr-auto">
                    <div class="input-group">
                        <input asp-for="@Model.EditProductAttributeViewModel.DiscountPrice" type="text" class="form-control" data-type="currency" placeholder="1.000.000đ"
                               oninput='this.value=this.value.replace(/\D/g, "").replace(/\B(?=(\d{3})+(?!\d))/g, ".")'>

                    </div>
                    <span asp-validation-for="@Model.EditProductAttributeViewModel.DiscountPrice" class="text-danger"></span>
                </div>
            </div>
           
        </div>
        <div class="form-group text-center">
            <div class="row">
                <div class="col-md-3">
                    <label class="control-label" asp-for="@Model.EditProductAttributeViewModel.CountStock"></label>
                </div>
                <div class="col-md-6 mr-auto">
                    <div class="input-group">
                        <input asp-for="@Model.EditProductAttributeViewModel.CountStock" type="text" class="form-control" data-type="quantity" placeholder="0"
                               oninput='this.value=this.value.replace(/\D/g, "")'>

                    </div>
                    <span asp-validation-for="@Model.EditProductAttributeViewModel.CountStock" class="text-danger"></span>
                </div>
            </div>
            
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </div>
    </form>




